schema {
    query: RootQuery
    mutation: RootMutation
}

type Job {
    id: ID!
    name: String!
    url: String!
}

type Run {
    id: ID!
    jobId: ID!
    uuid: String!
    status: String
    started: String
    ended: String
}

type RootQuery {

    getJobs: [Job]!

    getJob(id: ID!): Job!

    getRuns: [Run]!

    getRun(id: ID!): Run!

    runJob(id: ID!): Run!

}

type RootMutation {

    addJob(name: String!, url: String!): Job!

}